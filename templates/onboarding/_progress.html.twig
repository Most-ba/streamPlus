<div class="progress-container mb-4">
    <div class="progress" style="height: 5px;">
        <div class="progress-bar bg-success" role="progressbar" style="width: {% if current_step == 1 %}25%{% elseif current_step == 2 %}50%{% elseif current_step == 3 %}75%{% else %}100%{% endif %};" aria-valuenow="{% if current_step == 1 %}25{% elseif current_step == 2 %}50{% elseif current_step == 3 %}75{% else %}100{% endif %}" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="d-flex justify-content-between mt-2">
        <div class="step {% if current_step >= 1 %}active{% endif %}">
            <div class="step-circle">1</div>
            <div class="step-text">User Info</div>
        </div>
        <div class="step {% if current_step >= 2 %}active{% endif %}">
            <div class="step-circle">2</div>
            <div class="step-text">Address</div>
        </div>
        <div class="step {% if current_step >= 3 %}active{% endif %}">
            <div class="step-circle">3</div>
            <div class="step-text">Payment</div>
        </div>
        <div class="step {% if current_step >= 4 %}active{% endif %}">
            <div class="step-circle">4</div>
            <div class="step-text">Confirm</div>
        </div>
    </div>
</div> 