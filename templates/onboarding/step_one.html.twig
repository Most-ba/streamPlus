{% extends 'base.html.twig' %}

{% block title %}StreamPlus - User Information{% endblock %}


{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">StreamPlus Registration</h3>
                </div>
                <div class="card-body">
                     {% include 'onboarding/_progress.html.twig' with {'current_step': current_step} %}
                    <h4 class="mb-4">Step 1: User Information</h4>
                    
                    {{ form_start(form, {'attr': {'id': 'multi-step-form'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                            <div class="form-error">
                                {{ form_errors(form.name) }}
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email) }}
                            <div class="form-error">
                                {{ form_errors(form.email) }}
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.phone) }}
                            {{ form_widget(form.phone) }}
                            <div class="form-error">
                                {{ form_errors(form.phone) }}
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.subscriptionType) }}
                            <div class="mt-2">
                                {{ form_widget(form.subscriptionType) }}
                            </div>
                            <div class="form-error">
                                {{ form_errors(form.subscriptionType) }}
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Next</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}